<mvc:View
    xmlns:uxap="sap.uxap"
    controllerName="com.app.interviewschedule.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    height="100%"
>

    <ScrollContainer
        height="100%"
        width="100%"
        vertical="true"
        horizontal="false"
    >
        <IconTabBar
            id="idIconTabBar"
            select="handleIconTabBarSelect"
            headerBackgroundDesign="Transparent"
            class="sapUiResponsiveContentPadding sapUiSmallMarginBegin"
        >
            <items>
                <IconTabFilter text="JOB REQUISITION">
                    <FlexBox
                        direction="Row"
                        justifyContent="SpaceAround"
                        wrap="Wrap"
                        alignItems="Center"
                        class="sapUiMediumMarginEnd"
                        items="{local>/JOBREQ}"
                    >
                        <f:Card
                            class="sapUiMediumMargin "
                            height="100%"
                        >
                            <f:header>
                                <card:Header
                                    title="{=${local>TitlePosition} ? ${local>TitlePosition} + ' (' + ${local>positionCode} + ')': ''}"
                                    subtitle="Brazil (BR)"
                                    iconSrc="data:image/png;base64,"
                                />
                            </f:header>
                            <f:content>
                                <VBox
                                    width="100%"
                                    class="sapUiContentPadding"
                                >
                                    <Text
                                        text="{local>jobReqId}"
                                        class="sapUiMediumMarginBegin  sapUiSmallMarginTop"
                                    />

                                    <FlexBox
                                        width="auto"
                                        height="auto"
                                        alignItems="Center"
                                        justifyContent="SpaceAround"              
                                    >
                                        <Text
                                            text="{local>JobApplicationCount} Job Applications"
                                            class="sapUiSmallMarginBegin"
                                        />
                                        <Button
                                            text="{local>JobInterviewCount} Interview"
                                            type="Default"
                                            class="sapUiSmallMarginEnd"
                                        />
                                    </FlexBox>
                                    <Panel
                                        expand="expand"
                                        expandable="true"
                                        headerText="Interviews"
                                        width="auto"
                                        class="sapUiResponsiveMargin"
                                    >
                                    <content>
                                    <Text text="Round1" ></Text>
                                     <Text text="Round2" ></Text>
                                      <Text text="Round3" ></Text>
                                    </content>
                                    </Panel>
                                </VBox>
                            </f:content>
                        </f:Card>
                    </FlexBox>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </ScrollContainer>
</mvc:View>
