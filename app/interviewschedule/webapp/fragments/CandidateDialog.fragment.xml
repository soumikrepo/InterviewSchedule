<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:card="sap.f.cards"
>
    <Dialog
        id="popup"
        draggable="true"
        resizable="true"
        contentWidth="50%"
        contentHeight="40%"
    >
        <content>
            <FlexBox  
            items="{local>/currentApplications}"
            wrap="Wrap"
            justifyContent="Center"
            >
                <GenericTile
                    width="15em"
                    class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    header="{local>firstName} {local>lastName}"
                    frameType="OneByHalf"
                    press="onPressCard"
                    id="idTile"

                >
                    <TileContent>
                        <VBox >
                            <HBox>
                                <Label text="Email :" />
                                <Text text="{local>contactEmail}" />
                            </HBox>
                            
                             <HBox>
                                <Label text="Phone :" />
                                <Text text="{local>cellPhone}" />
                            </HBox>
                        </VBox>
                    </TileContent>
                </GenericTile>
            </FlexBox>
        </content>

        <footer>
            <Toolbar>
                <ToolbarSpacer />

                <Button
                    type="Accept"
                    text="Start Scheduling"
                    press="StartScheduleBtn"
                />

                <Button
                    text="Cancel"
                    type="Reject"
                    press="cancelDialog"
                    ariaHasPopup="Dialog"
                />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
