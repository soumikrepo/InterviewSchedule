<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="popup"
        draggable="true"
        resizable="true"
    >
        <content>
            <f:SimpleForm>
                <f:content>
                    <core:Title text="Information Of Interview" />

                    <Label text="Application Id" />
                    <ComboBox items="{local>/JOBREQ/PATH}">
                        <items>
                            <core:Item
                                key="{local>applicationId}"
                                text="{local>applicationId}"
                            />
                        </items>
                    </ComboBox>

                    <Label text="Application Interview Id" />
                    <Input
                        width="auto"
                        value="{local>/interviewData/applicationInterviewId}"
                    />

                    <Label text="Candidate Slot Map Id" />
                    <Input
                        width="auto"
                        value="{local>/interviewData/candSlotMapId}"
                    />

                    <Label text="is Time Set" />
                    <Input
                        width="auto"
                        value="{local>/interviewData/isTimeSet}"
                    />

                    <Label text="Source" />
                    <Input
                        width="auto"
                        value="{local>/interviewData/source}"
                    />

                    <Label text="Status" />
                    <Input
                        width="auto"
                        value="{local>/interviewData/status}"
                    />

                    <Label text="Start date" />
                    <DateTimePicker
                        id="DTP1"
                        placeholder="Enter Start Date"
                        change="handleChange"
                        class="sapUiSmallMarginBottom"
                        value="{local>/interviewData/startDate}"
                        width="auto"
                    />

                    <Label text="End date" />
                    <DateTimePicker
                        id="DTP2"
                        placeholder="Enter End Date"
                        change="handleChange"
                        class="sapUiSmallMarginBottom"
                        value="{local>/interviewData/endDate}"
                        width="auto"
                    />

                    <Label text="Note" />
                    <TextArea
                        id="TextArea"
                        placeholder="Enter text"
                        maxLength="100"
                        change="handleChange"
                        showExceededText="true"
                        rows="4"
                        value="{local>/interviewData/notes}"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />

                <Button
                    type="Accept"
                    text="Save"
                    press="saveDialog"
                />

                <Button
                    id="Clear"
                    text="Clear"
                    type="Reject"
                    press="clearDialog"
                    ariaHasPopup="Dialog"
                />

                <Button
                    type="Reject"
                    text="Close"
                    press="closeDialog"
                />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
