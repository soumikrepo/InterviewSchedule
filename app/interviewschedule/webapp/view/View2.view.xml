<mvc:View
    controllerName="com.app.interviewschedule.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns="sap.m"
>
    <VBox>

        <OverflowToolbar
            height="100%"
            width="100%"
        >
            <Label text="Appointment Actions : " />
            <ToggleButton
                text="Drag and Drop"
                id="enableAppointmentsDragAndDrop"
            />
            <ToggleButton
                text="Drag and Create"
                id="enableAppointmentsCreate"
            />
            <ToggleButton
                text="Resize"
                id="enableAppointmentsResize"
            />
        </OverflowToolbar>

        <SinglePlanningCalendar
            appointmentSelect="handleAppointmentSelect"
            class="sapUiSmallMarginTop"
            title="My Calendar"
            appointments="{path: '/appointments'}"
        >
            <actions>
                <Button
                    id="addNewAppointment"
                    text="Create"
                    tooltip="Add new appointment"
                />
                <Button
                    id="legendButton"
                    icon="sap-icon://legend"
                    tooltip="Open SinglePlanningCalendar legend"
                    ariaHasPopup="Dialog"
                />
            </actions>
            <appointments>
                <unified:CalendarAppointment
                    title="{title}"
                    text="{text}"
                    type="{type}"
                    icon="{icon}"
                    startDate="{startDate}"
                    endDate="{endDate}"
                />
            </appointments>
        </SinglePlanningCalendar>
    </VBox>
</mvc:View>
